                                <div class="list-group-item">
                                    <ul id="listas">
                                    <% Projeto.where('status=?', 'Concluido').each do |p| %>
                                        <li class="list-group-item"><%= link_to "Projeto: " + p.titulo, "projetos/#{p.id}" %></li>
                                    <% end %>
                                    </ul>
                                </div>             
                            </div>         
                        </div>
                    </div>
                </div><!-- /.col-lg-8 - Projetos-->
                
