            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-heading"> Controle de Projetos</div>
                         <!-- /.panel-heading -->
                        <div class="panel-body">
                            <!-- A FAZER  -->              
                            <div id="painel-2-box-azul" class="list-group list-group-item col-md-4" style="background: #337ab7;">
                                <p><b><i class="fa fa-thumb-tack" aria-hidden="true"></i> A FAZER <span class="badge badge-light">4</span></b></p>
                                <div class="list-group-item">
                                    <ul id="listas">
                                    <% Projeto.where('status=?', 'A Fazer').each do |p| %>
                                        <li class="list-group-item"><%= link_to "Projeto: " + p.titulo, "projetos/#{p.id}" %></li>
                                    <% end %>
                                    </ul>
                                </div>
                            </div>
                            <!-- EM PROGRESSO -->
                            <div id="painel-2-box-turquesa" class="list-group list-group-item col-md-4" style="background: #03706a;">
                                <p><b><i class="fa fa-thumb-tack" aria-hidden="true"></i> EM PROGRESSO <span class="badge badge-light">4</span></b></p>
